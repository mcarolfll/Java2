package Atividade;
import java.util.Scanner;
public class Atv {

	public static void main(String[] args) {
	
	//1) Faça um algoritmo que leia a idade de uma pessoa expressa em anos, meses e dias e mostre-a expressa em dias. 
	//Leve em consideração o ano com 365 dias e o mês com 30.
	//(Ex: 3 anos, 2 meses e 15 dias = 1170 dias.)
		
		
         Scanner tec = new Scanner (System.in);

		 int idade;
		 int mes = 30;
		 int dia;
		 
			System.out.print("coloque sua idade ");
			idade = tec.nextInt();

	        System.out.print("coloque seu mes");
	        mes = tec.nextInt();
	        
	        System.out.print("coloque os dias ");
	        dia = tec.nextInt();

	        int totaldias = (idade*365)+(mes*30)+dia;

	        System.out.println("A idade em dias é: " + totaldias);
		
		
		
	}

}


package Atividade;
import java.util.Scanner;

public class atv2 {
	public void atv2() {

//2) Escrever um algoritmo que lê: -
a porcentagem do IPI a ser acrescido no valor das peças  - o código da peça 1, valor unitário da peça 1, quantidade de peças 1  - 
//o código da peça 2, valor unitário da peça 2, quantidade de peças 2 O algoritmo deve calcular o valor total a ser pago e apresentar o resultado.
//Fórmula : (valor1*quant1 + valor2*quant2)*(IPI/100 + 1)

	  Scanner tec = new Scanner (System.in);

	System.out.println("coloque o valor do IPI");
	int IPI = tec.nextInt();
	System.out.println("coloque o valor  um");

	int valor1 = tec.nextInt();
	System.out.println("coloque a quantidade ");

    int quant1 = tec.nextInt();
	System.out.println("coloque o valor 2 ");

	int valor2 = tec.nextInt();
	System.out.println("coloque a quantidade");

    int quant2 = tec.nextInt();
			
		 double result=(valor1*quant1 + valor2*quant2)*(IPI/100 + 1);

			System.out.println(result);
}
}


