package Atividade;
import java.util.Scanner;
public class Atv {

	public static void main(String[] args) {
	
	//1) Faça um algoritmo que leia a idade de uma pessoa expressa em anos, meses e dias e mostre-a expressa em dias. 
	//Leve em consideração o ano com 365 dias e o mês com 30.
	//(Ex: 3 anos, 2 meses e 15 dias = 1170 dias.)
		
		
		 Scanner tec = new Scanner (System.in);

		 int ano= 365;
		 int mes = 30;
		 int dia;
		 
			System.out.print("Digite a idade em anos: ");
			ano = tec.nextInt();

	        System.out.print("Digite a idade em meses: ");
	        mes = tec.nextInt();
	        
	        System.out.print("Digite a idade em dias: ");
	        dia = tec.nextInt();

	        int totaldias = (ano * 365) + (mes * 30) + dia;

	        System.out.println("A idade em dias é: " + totaldias);
		
		
	}

}
