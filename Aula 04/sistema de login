package Atividade;
import java.util.Scanner;

public class atv4 {
	public void atv4() {
	
		 Scanner tec = new Scanner (System.in);
		
		 int alternativa ;
         int valor=0;
		 
		  System.out.println("--- Forma de Pagamento ---");
		  System.out.println("Digite 4 - Débito, Digite 5 - Crédito, Digite 6 - Pix, Digite 7 - Boleto");
			alternativa = tec.nextInt();

		            if (alternativa == 4) {
		    			System.out.println("Informe o valor ");
		    			 valor = tec.nextInt();

		    	}
		            if (alternativa == 5) {
		    			System.out.println("Informe o valor ");
		    			 valor =tec.nextInt();

		    	}

		            if (alternativa == 6) {
		    			System.out.println("Informe o valor ");
		    			 valor =tec.nextInt();

		    	} 
		            else if(alternativa == 7){
		    		System.out.println("Informe o valor ");
		    	valor = tec.nextInt();
		    		
		    		}

		    	
		            
					System.out.println("Pagamento de R$ " +valor + " via " + alternativa  );
	}
			 }
	
